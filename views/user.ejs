<%- include("partials/header") %>

    <body id="profilebody">
        <main class="user-container">
            <h1>Accountinstellingen</h1>
            <p class="welcome-msg">Welkom, <%= user.username %>
            </p>

            <!-- Profielafbeelding -->
            <% if (user.avatar) { %>
                <img src="<%= user.avatar %>" alt="Profielfoto" class="avatar-img">
                <% } else { %>
                    <img src="/assets/images/default-avatar.png" alt="Profielfoto" class="avatar-img">
                    <% } %>

                        <!-- Meldingen -->
                        <% if (message) { %>
                            <section class="notification <%= message.type %>">
                                <%= message.message %>
                            </section>
                            <% } %>

                                <!-- Profiel bijwerken -->
                                <form method="POST" action="/user/update-profile" class="form-box">
                                    <h2 id="titel">Profiel bijwerken</h2>

                                    <label for="username">Gebruikersnaam</label>
                                    <input type="text" name="username" id="username" value="<%= user.username %>"
                                        required>

                                    <label for="email">E-mailadres</label>
                                    <input type="email" name="email" id="email" value="<%= user.email %>" required>

                                    <label for="avatar">URL van profielfoto</label>
                                    <input type="text" name="avatar" id="avatar" value="<%= user.avatar || '' %>">

                                    <hr>

                                    <h2>Wachtwoord wijzigen</h2>

                                    <label for="oldPassword">Oud wachtwoord</label>
                                    <input type="password" name="oldPassword" id="oldPassword">

                                    <label for="newPassword">Nieuw wachtwoord</label>
                                    <input type="password" name="newPassword" id="password">

                                    <button type="submit" class="primary-btn">Wijzig gegevens</button>
                                </form>

                                <!-- Account verwijderen -->
                                <form method="POST" action="/user/delete-account" class="form-box danger-box">
                                    <!-- <label for="delete-account">Verwijder account</label> -->
                                    <button type="submit" class="danger-btn"
                                        onclick="return confirm('Ben je zeker dat je je account wilt verwijderen?')">
                                        Verwijder account
                                    </button>
                                </form>
        </main>
    </body>
    <%- include("partials/footer") %>